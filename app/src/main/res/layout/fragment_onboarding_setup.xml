<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <TextView
            android:id="@+id/setup_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_setup_title"
            android:textAppearance="?attr/textAppearanceHeadlineMedium"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/setup_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_setup_description"
            android:textAppearance="?attr/textAppearanceBodyLarge"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/setup_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Wi-Fi Only Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/wifi_only_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            style="@style/Widget.Material3.CardView.Elevated"
            app:layout_constraintTop_toBottomOf="@id/setup_description"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_wifi_only_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_wifi_only_description"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.switchmaterial.SwitchMaterial
                    android:id="@+id/wifi_only_switch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/pref_unmetered_connections_only_title"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Storage Location Option -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/storage_location_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            style="@style/Widget.Material3.CardView.Elevated"
            app:layout_constraintTop_toBottomOf="@id/wifi_only_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_storage_location_title"
                    android:textAppearance="?attr/textAppearanceTitleMedium" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/onboarding_storage_location_description"
                    android:textAppearance="?attr/textAppearanceBodyMedium"
                    android:layout_marginTop="8dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/choose_storage_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/select"
                    style="@style/Widget.Material3.Button.TonalButton"
                    android:layout_marginTop="8dp" />

                <TextView
                    android:id="@+id/storage_location_path"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBodySmall"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"
                    tools:visibility="visible"
                    tools:text="/storage/emulated/0/Download" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/finish_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="@string/onboarding_finish"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="32dp"
            style="@style/Widget.Material3.Button"
            app:layout_constraintTop_toBottomOf="@id/storage_location_card"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
